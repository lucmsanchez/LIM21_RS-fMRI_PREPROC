
    mkdir 3d && \
    fsl5.0-fslsplit ${in[$i]}[1] 3d/3d_$i_ -t && \
    gunzip 3d/3d_$i_* && \
    matlab -nodesktop -nodisplay 2>&1 << EOF           
    aztec('${in[$i]}[2]','$(find 3d)',500,$TR,1,$hp,'${out[$i]}path');
    quit
    EOF && \
    rm 3d/3d* && \
    3dTcat -prefix z_RS_$i.nii -TR 2 3d/aztec* && \
    rm 3d/aztec*